doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Plants 
        .cards 
            each plant in data
                .card 
                    h2.card__name #{plant.properties.plant_name}
                    p.card__color #{plant.properties.plant_color}
                    p.card__type #{plant.properties.plant_type}